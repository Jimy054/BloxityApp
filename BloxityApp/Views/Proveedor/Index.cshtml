@model IEnumerable<BloxityApp.Models.ProveedorModel>
@ViewBag.Message
@{
}

<h1>Proveedores: @ViewBag.quantity</h1>
  
        


<p>
    <a asp-action="Create">Create New</a>   
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rfc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() >0)
        {
             @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazonSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rfc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeCreacion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProveedorId">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.ProveedorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProveedorId">Delete</a>
                </td>
            </tr>
            }

            <tr>
                 <td>
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                 </td>
            </tr>
        }
       
    </tbody>
</table>
