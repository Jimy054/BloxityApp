@model BloxityApp.Models.ProductoModel
@ViewBag.Message
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Unidad" class="control-label"></label>
                <select asp-for="Unidad" asp-items="ViewBag.medida"></select>
                <span asp-validation-for="Unidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="ProveedorId" class="control-label"></label>                              
                <select asp-for="ProveedorId" asp-items="@(new SelectList(ViewBag.proveedores,"Value","Text"))"></select>                
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>


            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
